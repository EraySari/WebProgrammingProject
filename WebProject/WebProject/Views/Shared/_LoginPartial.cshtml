@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer
@inject SignInManager<UserDetail> SignInManager
@inject UserManager<UserDetail> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
        <ul class="nav__links">
        <li class="nav__item logined">
                <a class="nav__link nav__link--btn btn--open-sign" asp-area="Identity" asp-page="/Account/Register">Sign</a>
        </li>
        <li class="nav__item logined">
                <a class="nav__link nav__link--btn btn--open-login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
        </ul>
}
</ul>
